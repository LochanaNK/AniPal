<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/menu"
        android:contentDescription="@string/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_menu"
        android:layout_marginTop="75dp"
        android:layout_marginStart="50dp"
        android:padding="2dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/profile"
        android:contentDescription="@string/profile_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_profile"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/label_search"
        android:autofillHints="name"
        android:inputType="text"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/genre"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Select a Genre"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintStart_toStartOf="@id/search">


    <AutoCompleteTextView
            android:id="@+id/genre_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:inputType="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/year"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Select the Year"
        app:layout_constraintTop_toBottomOf="@id/genre"
        app:layout_constraintStart_toStartOf="@id/genre">


        <AutoCompleteTextView
            android:id="@+id/year_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:inputType="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mood_title"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"/>
            <TextView
                android:id="@+id/description_mood"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/mood_description"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                app:layout_constraintTop_toBottomOf="@+id/title_mood"
                app:layout_constraintStart_toStartOf="@+id/title_mood"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="always"
                android:layout_marginTop="10dp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                app:layout_constraintTop_toBottomOf="@+id/description_mood"
                app:layout_constraintStart_toStartOf="@+id/description_mood">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:id="@+id/mood1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood1"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/mood2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood2"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/mood3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood3"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/mood4"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood4"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:id="@+id/mood5"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood5"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/mood6"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood6"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/mood7"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood7"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/mood8"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@color/button"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood8"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>